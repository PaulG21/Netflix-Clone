<!DOCTYPE html>
<html>
  <head>
    <title>NetflixClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <script type="text/javascript">
      window.netflix_background = "<%= image_url('netflix_background') %>";
      window.netflix_logo = "<%= image_url('netflix_logo') %>";
    </script>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user  %>
      <script> 
        window.currentUser = {
          'id': <%= current_user.id %>,
          'username': '<%= current_user.username %>',
          'email': '<%= current_user.email %>'
        };
      </script>
      <% end %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
